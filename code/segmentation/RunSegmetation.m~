function  [pixelLabels, pixelClusterDistances, Am] = segmentImage(imageName, k, l_weight, a_weight, b_weight, seRadius, nItr, imageDir)
    %% Set Default Image Directory
    if ~exist('imageDir','var') || isempty(imageDir)
        imageDir = '../../data/swimseg/images/';  
    end
    
    im = imread(strcat(imageDir, imageName));
    [pixelLabels, pixelClusterDistances, Am] = slic(im, k, l_weight, a_weight, b_weight, seRadius, nItr);
end

function saveImageSegmentationToDirectory(im, pixelLabels, saveDirectory)
    BW = boundarymask(pixelLabels);
    imwrite(imoverlay(im, BW, 'cyan'), saveDirectory);
end